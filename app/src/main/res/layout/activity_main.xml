<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression_text_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:padding="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <GridLayout
        android:id="@+id/main_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:columnCount="4"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expression_text_field">

        <TextView
            android:id="@+id/ac_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/first_line_buttons"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/plus_minus_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/first_line_buttons"
            android:text="±"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/percent_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/first_line_buttons"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/div_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/orange_buttons"
            android:text="÷"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/seben_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/acht_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/neun_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mlp_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/orange_buttons"
            android:text="×"
            android:textColor="@color/button_text_selector"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/vier_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fünf_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sechs_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mns_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/orange_buttons"
            android:text="−"
            android:textColor="@color/button_text_selector"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/eins_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/zwie_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/drei_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/inc_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/orange_buttons"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="+"
            android:textColor="@color/button_text_selector"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/zero_button"
            android:gravity="center_vertical"
            android:paddingStart="30dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:background="@drawable/buttons"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp" />
        
        <TextView
            android:id="@+id/float_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/buttons"
            android:text=","
            android:textColor="@color/white"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/equals_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/orange_buttons"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="="
            android:textColor="@color/button_text_selector"
            android:textSize="30sp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>